    public void updateRouteBuildingDate(int routeDateId, List<RouteBuildingDateView> list) {
        RouteBuildingDateBC bc = new RouteBuildingDateBC();
        bc.deleteRouteBuildingDate(routeDateId);
                
        for (RouteBuildingDateView rbdv : list) {
            RouteBuildingDate rbd = new RouteBuildingDate();
            rbd.setId(new Integer(rbdv.getRouteBuildingDateId()));
            rbd.setRouteId(rbdv.getRouteId());
            rbd.setOrderId(rbdv.getOrderId());
            rbd.setBuildingId(rbdv.getBuildingId());
            rbd.setRouteDateId(rbdv.getRouteDateId());
            bc.createRouteBuildingDate(rbd);
        }
    }

    public RouteBuildingDate getRouteBuildingDate(int routeId, Date meterReadingDate) {
		RouteBuildingDateBC bc = new RouteBuildingDateBC();
		return bc.getRouteBuildingDate(routeId, meterReadingDate);        
    }
    
}
