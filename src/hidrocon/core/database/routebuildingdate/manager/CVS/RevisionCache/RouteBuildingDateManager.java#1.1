	public List getRouteBuildingDateList(int routeDateId) {
		RouteBuildingDateBC bc = new RouteBuildingDateBC();
		List list = bc.getRouteBuildingDateList(routeDateId);
		return list;
	}

	public List getRouteBuildingDateListByBuildingId(int buildingId) {
		RouteBuildingDateBC bc = new RouteBuildingDateBC();
